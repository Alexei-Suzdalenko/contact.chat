<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageProfile"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:src="@drawable/user"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:id="@+id/leendaLinearLayout"
        android:orientation="vertical"
        android:layout_toEndOf="@id/userImageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginStart="11dp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/shadow_grey"
            android:textSize="18dp"
            android:padding="5dp"
            android:id="@+id/conversationName"
            />
        <TextView
            android:layout_marginStart="11dp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/shadow_grey"
            android:textSize="17dp"
            android:padding="5dp"
            android:id="@+id/conversationEmail"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/deleteConversation"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name" />
</RelativeLayout>